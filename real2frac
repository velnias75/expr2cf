if [ -z "$1" ]; then
  >&2 echo "Usage: "`basename $0`" real|expression"
  exit 1
fi

CF=`echo -n "$1" | expr2cf`

if [ $? != 0 ]; then
  exit 1
else
  echo -n "$CF" | cf2expr
  if [ $? != 0 ]; then
    exit 1
  fi
fi

exit $?
